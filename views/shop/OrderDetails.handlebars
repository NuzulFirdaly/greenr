<div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Short Description</th>
        <th>Picture</th>
        <th>Price($)</th>
        <th>Quantity</th>
        <th>Total Price($)</th>
        <th>Link to product</th>


      </tr>
    </thead>
    <tbody>
      {{#each items}}
      <tr>
        <td>{{ this.Title }}</td>
        <td>
          <p style="height: 40px; scroll:auto;">{{ this.Short_description }}</p>
        </td>
        <td><img height="40px" width="40px" src="/images/coursethumbnails/{{this.Course_thumbnail}}" alt=""></td>
        <td>
          {{this.Hourlyrate}}
        </td>
        <td>
            {{this.order_details.[0].quantity}}
        </td>
        <td>
            {{this.order_details.[0].total_price}}
        </td>
        <td>
          <a class="btn btn-success" href="/course/viewcourse/{{this.course_id}}">Link</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>