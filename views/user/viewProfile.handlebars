<script type="text/javascript">
    /// some script

    // jquery ready start
    $(document).ready(function () {
        // jQuery code


        /////////////////  items slider. /plugins/owlslider/
        if ($('.slider-items-owl').length > 0) { // check if element exists
            $('.slider-items-owl').owlCarousel({
                //change the loop daddy
                loop: false,
                nav: true,
                autoWidth: true,
                margin: 10,
                navText: ["<i class='fa fa-chevron-left'></i>", "<i class='fa fa-chevron-right'></i>"],
                responsive: {
                    0: {
                        items: 1
                    },
                    640: {
                        items: 2
                    },
                    1024: {
                        items: 3
                    }
                }
            })
        } // end if




    });
// jquery end


</script>
<style>
    .profile-head {
        transform: translateY(5rem)
    }

    .cover {
        background-size: cover;
        background-repeat: no-repeat
    }
</style>

<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop bg padding-y">
    <div class="container">
        <h2 class="title-page">{{tutor.FirstName}} {{tutor.LastName}}'s Profile</h2>
    </div> <!-- container //  -->
</section>
<div class="col-md-7 mx-auto">
    <!-- Profile widget -->
    <div class="bg-white shadow rounded overflow-hidden">
        {{#if extra.background}}
                    <div class="px-4 pt-0 pb-4 cover" style="background-image: url(/images/background/{{extra.background}})">
                    {{else}}
                    <div class="px-4 pt-0 pb-4 cover" style="background-image: url(https://images.unsplash.com/photo-1530305408560-82d13781b33a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1352&q=80);">
                    {{/if}}
            <div class="media align-items-end profile-head">
                <div class="profile mr-3"><img src="/images/profilepictures/{{tutor.Profile_pic}}" alt="..." width="130"
                        class="rounded mb-2 img-thumbnail"></div>
                <div class="media-body mb-5" style="color: {{extra.color}}">
                    <h4 class="mt-0 mb-0">{{tutor.FirstName}} {{tutor.LastName}}</h4>
                    <p class="small mb-4"> {{tutor.Username}}</p>
                </div>
            </div>
        </div>
        <div class="bg-light p-4 d-flex justify-content-end text-center">
            {{#if affiliation}}
            Affiliated with
            <img src="/images/Institutionpictures/{{affiliation.dataValues.mainlogo}}" width="80px" height="40px"
                alt="">
            {{/if}}
            <div class="col-md-1"></div>
        </div>
        <div class="px-4 py-3">
            <h5 class="mb-0">About</h5>
            <div class="p-4 rounded shadow-sm bg-light">
                {{#if Tutor.description}}
                {{Tutor.description}}
                {{else}}
                The user has not written a description of themself.
                {{/if}}
            </div>
        </div>
        <div class="py-4 px-4">
            {{#if coursesarray}}
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h5 class="mb-0">Their products</h5>
            </div>
            <div class="slider-items-owl owl-carousel owl-theme" style="margin-left:2em;">
                {{#each coursesarray }}
                                <div id="{{Title}}" class="item-slide">
                <figure class="card border-success card-product-grid" style="width:18rem;">
                    <div class="img-wrap" >
                        <img src="/images/coursethumbnails/{{Course_thumbnail}}"height="140" width="240">
                    </div>
                    <figcaption class="info-wrap">
                        <h5 class="title"><a href="/course/viewcourse/{{course_id}}">{{Title}}</a></h5>
                        <p class="text-muted"style="height:58px">{{Short_description}}</p>
                        <h6 style="color: green;">GHG/Year: {{GHG}}</h6>
                        <h5>${{Hourlyrate}}</h5>
                    </figcaption>
                </figure> <!-- card // -->
                </div>

                {{/each}}
            </div>
            {{/if}}
        </div>
    </div>
</div>

</div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->


